<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/background_item"
        android:orientation="vertical"
        android:padding="10dp" >

        <TextView
            android:id="@+id/textViewOwnername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginRight="10dp"
            android:gravity="center_horizontal"
            android:text="Owner name :"
            android:textColor="@color/theme_color"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textViewFlatDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Flat no and Wing name :"
            android:textColor="#ff847979"/>

         <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10"
        android:layout_marginTop="3dp">
        
        <TextView
            android:id="@+id/textViewDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Visitor name :"
            android:textColor="#ff847979" />
        
        <TextView
            android:id="@+id/textViewMemberWithVisitor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:text="No of member with visitor :"
            android:textColor="#ff847979" />
        </LinearLayout>
        
          <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10"
        android:layout_marginTop="3dp">
         
        <TextView
            android:id="@+id/textViewVehicleNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Vehicle No :"
            android:textColor="#ff847979" />
        <TextView
            android:id="@+id/textViewNoOfVehicle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:text="No of Vehicle :"
            android:textColor="#ff847979" />
        </LinearLayout>
        
         <TextView
            android:id="@+id/textViewPurpose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Purpose :"
            android:textColor="#ff847979" />
         
         <TextView
        android:id="@+id/textViewVisitorInTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Visitor in time :"
        android:textColor="#ff847979"
        android:textSize="16sp" 
        android:layout_marginTop="20dp"
        android:layout_gravity="right"/>
         
    </LinearLayout>

</RelativeLayout>