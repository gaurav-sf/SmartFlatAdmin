<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="480dp" >

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="400dp"
        android:background="@drawable/background_item"
        android:orientation="vertical"
        android:padding="10dp" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageButton
                android:id="@+id/buttonClose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/close"
                android:text="CLOSE"
                android:background="@null"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/textViewRequestNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:gravity="center_horizontal"
                android:text="temp"
                android:textColor="#469196"
                android:textSize="22sp"
                android:textStyle="bold|italic" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
            android:layout_marginTop="15dp">

            <TextView
                android:id="@+id/textViewPriorityType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@android:color/transparent"
                android:text="HIGH"
                android:textColor="#ff0000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textViewPriority"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/textViewPriorityType"
                android:gravity="center_horizontal"
                android:text="Priority :"
                android:textColor="#000000"
                android:textSize="16sp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/textViewCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Category :"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/textViewDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Details :"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/textViewManagementReply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Management reply :"
            android:textColor="#000000" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:padding="5dp"
        android:layout_alignParentBottom="true" 
        android:background="@drawable/background_item"
        android:orientation="horizontal"
        android:weightSum="10">

        <EditText
            android:id="@+id/editText1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:background="@drawable/edittext_bg"
            android:ems="10"
            android:textColor="#000000"
            android:layout_gravity="center_vertical"
            android:hint="Message"
            android:padding="5dp" 
            android:layout_weight="8">

        </EditText>

        <ImageButton
            android:id="@+id/imageButton1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/send_msg"
            android:layout_gravity="center_vertical" 
            android:background="@null"
            android:layout_weight="2"/>

    </LinearLayout>

</RelativeLayout>