<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical"
    android:padding="5dp" >

    

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10">
        
        <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.7"
        android:layout_gravity="center"
        android:src="@drawable/request_listview_icon" />

        <TextView
            android:id="@+id/textViewRequestNumber"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Request Number"
            android:textColor="@color/theme_color"
            android:textSize="18sp"
            android:textStyle="bold" 
            android:layout_weight="8"/>

        <TextView
            android:id="@+id/textViewPriority"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="High"
            android:textColor="#ff0000"
            android:layout_weight="1.7"
            android:layout_gravity="right"
            android:textSize="16sp" />
    </LinearLayout>
    
     <View
                android:id="@+id/viewLineRequestComplaint"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="2dp"
                android:background="@color/theme_color" />

    <TextView
        android:id="@+id/textViewCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Category :- "
        android:textColor="#ff847979"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textViewDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Details :"
        android:textColor="#ff847979"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textViewDatetime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Large Text"
        android:textColor="#adadad"
        android:layout_gravity="right"
        android:textSize="14sp" />
            
        <TextView
        android:id="@+id/textViewUnreadMessageCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="23"
        android:textColor="@color/white"
        android:layout_gravity="right"
        android:textSize="14sp" 
        android:background="@drawable/btnbg"
        android:textStyle="bold"
        android:visibility="gone"/>

</LinearLayout>