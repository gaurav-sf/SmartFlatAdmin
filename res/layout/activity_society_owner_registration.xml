<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_image"
    android:padding="20sp" >

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Personel Registration"
            android:textColor="@color/theme_color"
            android:textSize="22sp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonNext"
        android:layout_below="@+id/container"
        android:layout_marginTop="20dp"
        android:paddingBottom="10dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/editTextName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/trans_edittext_bg"
                android:ems="10"
                android:hint="Name"
                android:inputType="textCapWords"
                android:padding="5dp"
                android:textColor="@color/text_color"
                android:textColorHint="@color/text_hint_color" />

            <EditText
                android:id="@+id/editTextDOB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/trans_edittext_bg"
                android:ems="10"
                android:hint="DOB"
                android:padding="5dp"
                android:textColor="@color/text_color"
                android:textColorHint="@color/text_hint_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/trans_edittext_bg"
                android:orientation="vertical"
                android:padding="5dp" >

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:text="Gender"
                    android:textColor="@color/text_color" />

                <RadioGroup
                    android:id="@+id/RadioGroupGender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal" >

                    <RadioButton
                        android:id="@+id/radioButtonMale"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:checked="true"
                        android:button="@drawable/custom_radio_button"
                        android:text="Male"
                        android:textColor="@color/text_color" />

                    <RadioButton
                        android:id="@+id/radioButtonFemale"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Female"
                        android:button="@drawable/custom_radio_button"
                        android:textColor="@color/text_color" />
                </RadioGroup>
            </LinearLayout>

            <EditText
                android:id="@+id/editTextContactNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/trans_edittext_bg"
                android:ems="10"
                android:hint="Contact Number"
                android:inputType="number"
                android:padding="5dp"
                android:maxLength="10"
                android:textColor="@color/text_color"
                android:textColorHint="@color/text_hint_color" />

            <EditText
                android:id="@+id/editTextEmailId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/trans_edittext_bg"
                android:ems="10"
                android:hint="Email id"
                android:inputType="textEmailAddress"
                android:padding="5dp"
                android:textColor="@color/text_color"
                android:textColorHint="@color/text_hint_color" />

            <EditText
                android:id="@+id/editTextAddressLine1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/trans_edittext_bg"
                android:ems="10"
                android:hint="Address Line 1"
                android:inputType="textCapSentences|textMultiLine"
                android:maxLines="3"
                android:padding="5dp"
                android:textColor="@color/text_color"
                android:textColorHint="@color/text_hint_color" />

            <EditText
                android:id="@+id/editTextAddressLine2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/trans_edittext_bg"
                android:ems="10"
                android:hint="Address Line 2"
                android:inputType="textCapSentences|textMultiLine"
                android:maxLines="3"
                android:padding="5dp"
                android:textColor="@color/text_color"
                android:textColorHint="@color/text_hint_color" />

            <EditText
                android:id="@+id/editTextCity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/trans_edittext_bg"
                android:ems="10"
                android:hint="City"
                android:inputType="textCapSentences"
                android:padding="5dp"
                android:textColor="@color/text_color"
                android:textColorHint="@color/text_hint_color" />

            <EditText
                android:id="@+id/editTextState"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/trans_edittext_bg"
                android:ems="10"
                android:inputType="textCapSentences"
                android:hint="State"
                android:padding="5dp"
                android:textColor="@color/text_color"
                android:textColorHint="@color/text_hint_color" />

            <EditText
                android:id="@+id/editTextPin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/trans_edittext_bg"
                android:ems="10"
                android:hint="PIN Code"
                android:inputType="number"
                android:maxLength="6"
                android:padding="5dp"
                android:textColor="@color/text_color"
                android:textColorHint="@color/text_hint_color" />
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/buttonNext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/btnbg"
        android:ems="10"
        android:text="NEXT"
        android:textColor="@drawable/btn_text_color" />

</RelativeLayout>